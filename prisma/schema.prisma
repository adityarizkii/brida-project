// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id String @id @default(uuid())
  email String
  firstName String
  lastName String
  password String
}

model DataSatwa {
  idSatwa String @id @default(uuid())
  name String
  description String
  location String?
  image String? 
  coorX Int?
  coorY Int?
}

model Soal {
  idSoal String @id @default(uuid())
  soal String
  jawaban String
  opsi String[]
  penjelasan String?
  image String?
}

model Artikel {
  idArtikel String @id @default(uuid())
  title String
  url String
  year DateTime?
  image String?
}

model Admin {
  idAdmin String @id @default(uuid())
  name String
  email String
  password String
}

